<div class="comments">
  {{!-- this is being looped over, all of the expressions within 
  the loop look for properties on each object in this --}}
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_data created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>